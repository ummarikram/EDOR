<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#3d85c6"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/grade_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="60dp"
                android:text="SMD"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/grade_remove_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="#e06666"
                android:clickable="true"
                android:contentDescription="RemoveCourse"
                app:borderWidth="0dp"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        </RelativeLayout>

            <TextView
                android:id="@+id/course_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="CREDIT HOURS : 3"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/course_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="GRADE : A+"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/course_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="SCORE : 3.33"
                android:textColor="@color/white"
                android:textSize="16sp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>